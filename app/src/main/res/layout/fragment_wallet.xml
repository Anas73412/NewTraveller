<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/space_10"
           android:orientation="vertical">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:weightSum="2"
               >
               <androidx.cardview.widget.CardView
                   android:id="@+id/card_total_earnings"
                   android:layout_width="0dp"
                   android:layout_height="120dp"
                   app:cardCornerRadius="10dp"
                   android:layout_weight="1"
                   app:cardElevation="5dp"
                   android:layout_margin="5dp"

                   >
                   <RelativeLayout
                       android:id="@+id/rel_total_earning"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_gravity="center_vertical"
                       android:paddingTop="15dp"
                       >
                       <ImageView
                           android:id="@+id/img"
                           android:layout_width="60dp"
                           android:layout_height="60dp"
                           android:src="@drawable/icons8_merchant_account_64px"
                           android:layout_centerHorizontal="true"
                           android:backgroundTint="@color/textcolor"
                           />
                       <in.binplus.travel.Fonts.LatoBLack
                           android:layout_below="@+id/img"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_5"
                           android:layout_centerHorizontal="true"
                           android:text=" Total Earnings "
                           android:textStyle="bold"
                           android:textColor="@color/textcolor"
                           android:textSize="16dp"/>

                   </RelativeLayout>
               </androidx.cardview.widget.CardView>
               <androidx.cardview.widget.CardView
                   android:id="@+id/card_credit_limit"
                   android:layout_width="0dp"
                   android:layout_height="120dp"
                   app:cardCornerRadius="10dp"
                   android:layout_weight="1"
                   app:cardElevation="5dp"
                   android:layout_margin="5dp"

                   >
                   <RelativeLayout
                       android:id="@+id/rel_credit_limit"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_gravity="center_vertical"
                       android:paddingTop="15dp"
                       >
                       <ImageView
                           android:id="@+id/img1"
                           android:layout_width="60dp"
                           android:layout_height="60dp"
                           android:layout_centerHorizontal="true"
                           android:src="@drawable/icons8_credit_control_64px"
                           android:backgroundTint="@color/white"
                           />
                       <in.binplus.travel.Fonts.LatoBLack
                           android:layout_below="@+id/img1"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                          android:layout_marginTop="@dimen/space_5"
                           android:layout_centerHorizontal="true"
                           android:text=" Credit Limit "
                           android:textStyle="bold"
                           android:textColor="@color/textcolor"
                           android:textSize="16dp"/>

                   </RelativeLayout>
               </androidx.cardview.widget.CardView>

           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:weightSum="2"
               >
               <androidx.cardview.widget.CardView
                   android:id="@+id/card_recharge_req"
                   android:layout_width="0dp"
                   android:layout_height="120dp"
                   app:cardCornerRadius="10dp"
                   android:layout_weight="1"
                   app:cardElevation="5dp"
                   android:layout_margin="5dp"

                   >
                   <RelativeLayout
                       android:id="@+id/rel_recharge_req"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_gravity="center_vertical"
                       android:paddingTop="15dp"
                       >
                       <ImageView
                           android:id="@+id/img2"
                           android:layout_width="60dp"
                           android:layout_height="60dp"
                           android:layout_centerHorizontal="true"
                           android:src="@drawable/icons8_request_money_64px"
                           android:backgroundTint="@color/white"
                           />
                       <in.binplus.travel.Fonts.LatoBLack
                           android:layout_below="@+id/img2"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                          android:layout_marginTop="@dimen/space_5"
                           android:layout_centerHorizontal="true"
                           android:text="Request Recharge"
                           android:textStyle="bold"
                           android:textColor="@color/textcolor"
                           android:textSize="16dp"/>

                   </RelativeLayout>
               </androidx.cardview.widget.CardView>
               <androidx.cardview.widget.CardView
                   android:id="@+id/card_recharge_history"
                   android:layout_width="0dp"
                   android:layout_height="120dp"
                   app:cardCornerRadius="10dp"
                   android:layout_weight="1"
                   app:cardElevation="5dp"
                   android:layout_margin="5dp"

                   >
                   <RelativeLayout
                       android:id="@+id/rel_recharge_history"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_gravity="center_vertical"
                       android:paddingTop="15dp"
                       >
                       <ImageView
                           android:id="@+id/img3"
                           android:layout_width="60dp"
                           android:layout_height="60dp"
                           android:layout_centerHorizontal="true"
                            android:src="@drawable/icons8_payment_history_64px"
                           android:backgroundTint="@color/white"
                           />
                       <in.binplus.travel.Fonts.LatoBLack
                           android:layout_below="@+id/img3"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                          android:layout_marginTop="@dimen/space_5"
                           android:layout_centerHorizontal="true"
                           android:text="Recharge History"
                           android:textStyle="bold"
                           android:textColor="@color/textcolor"
                           android:textSize="16dp"/>

                   </RelativeLayout>
               </androidx.cardview.widget.CardView>

           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:weightSum="2"
               >
               <androidx.cardview.widget.CardView
                   android:id="@+id/card_trans_history"
                   android:layout_width="0dp"
                   android:layout_height="120dp"
                   app:cardCornerRadius="10dp"
                   android:layout_weight="1"
                   app:cardElevation="5dp"
                   android:layout_margin="5dp"

                   >
                   <RelativeLayout
                       android:id="@+id/rel_trans_history"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_gravity="center_vertical"
                       android:paddingTop="15dp"
                       >
                       <ImageView
                           android:id="@+id/img4"
                           android:layout_width="60dp"
                           android:layout_height="60dp"
                           android:layout_centerHorizontal="true"
                            android:src="@drawable/icons8_transaction_list_64px"
                           android:backgroundTint="@color/white"
                           />
                       <in.binplus.travel.Fonts.LatoBLack
                           android:layout_below="@+id/img4"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="@dimen/space_5"
                           android:layout_centerHorizontal="true"
                           android:text="Transaction History"
                           android:textStyle="bold"
                           android:textColor="@color/textcolor"
                           android:textSize="16dp"/>

                   </RelativeLayout>
               </androidx.cardview.widget.CardView>
               <androidx.cardview.widget.CardView
                   android:id="@+id/card_todays_booking"
                   android:layout_width="0dp"
                   android:layout_height="120dp"
                   app:cardCornerRadius="10dp"
                   android:layout_weight="1"
                   app:cardElevation="5dp"
                   android:layout_margin="5dp"

                   >
                   <RelativeLayout
                       android:id="@+id/rel_today_booking"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_gravity="center_vertical"
                       android:paddingTop="15dp"
                       >
                       <ImageView
                           android:id="@+id/img6"
                           android:layout_width="60dp"
                           android:layout_height="60dp"
                           android:layout_centerHorizontal="true"

                            android:src="@drawable/icons8_repository_64px"
                           android:backgroundTint="@color/white"
                           />
                       <in.binplus.travel.Fonts.LatoBLack
                           android:layout_below="@+id/img6"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="@dimen/space_5"
                           android:layout_centerHorizontal="true"
                           android:text="Todays Bookings"
                           android:textStyle="bold"
                           android:textColor="@color/textcolor"
                           android:textSize="16dp"/>

                   </RelativeLayout>
               </androidx.cardview.widget.CardView>

           </LinearLayout>

               <androidx.cardview.widget.CardView
                   android:id="@+id/card_pending_amount"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   app:cardCornerRadius="10dp"
                   android:layout_weight="1"
                   app:cardElevation="5dp"
                   android:layout_margin="5dp"

                   >
                   <RelativeLayout
                       android:id="@+id/rel_pending_amt"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center_vertical"
                       android:paddingTop="15dp"
                       android:layout_marginBottom="@dimen/space_10"
                       >
                       <ImageView
                           android:id="@+id/img7"
                           android:layout_width="60dp"
                           android:layout_height="60dp"
                            android:layout_margin="@dimen/space_5"
                            android:padding="@dimen/space_5"
                           android:src="@drawable/icons8_receive_cash_64px"
                           />
                       <in.binplus.travel.Fonts.LatoBLack
                           android:id="@+id/pending_amt"
                           android:layout_toRightOf="@+id/img7"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="@dimen/space_10"
                           android:layout_marginLeft="@dimen/space_10"

                           android:text="0000"
                           android:textStyle="bold"
                           android:textColor="@color/textcolor"
                           android:textSize="16dp"/>
                       <in.binplus.travel.Fonts.LatoBLack
                           android:id="@+id/txts"
                           android:layout_toRightOf="@+id/img7"
                           android:layout_below="@+id/pending_amt"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="@dimen/space_5"
                           android:layout_centerHorizontal="true"
                           android:text="Pending Amount"
                           android:textStyle="bold"
                           android:textColor="@color/textcolor"
                           android:layout_marginBottom="@dimen/space_5"
                           android:textSize="16dp"/>
                       <View
                           android:layout_width="match_parent"
                           android:layout_height="@dimen/space_1"
                           android:id="@+id/view"
                            android:visibility="gone"
                           android:background="@color/colorPrimary"
                           android:layout_below="@+id/txts"
                           android:layout_margin="@dimen/space_5"/>
                       <in.binplus.travel.Fonts.LatoBLack
                           android:id="@+id/viewall_trns"
                           android:layout_below="@+id/view"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:textAlignment="center"
                           android:layout_centerHorizontal="true"
                           android:text="Submit"
                           android:layout_marginBottom="@dimen/space_5"
                           android:textColor="@color/textcolor"
                           android:textSize="16dp"
                           android:drawablePadding="@dimen/space_10"
                           android:paddingEnd="@dimen/space_20"
                           android:visibility="gone"
                           android:drawableRight="@drawable/icons8_double_right_16px"
                           android:drawableTint="@color/colorPrimary"/>

                   </RelativeLayout>
               </androidx.cardview.widget.CardView>


       </LinearLayout>
   </ScrollView>
</RelativeLayout>