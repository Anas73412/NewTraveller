<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:src="@drawable/logo"
            android:padding="@dimen/space_5"
            android:textAlignment="center" />


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <in.binplus.travel.Fonts.LatoBLack
                android:id="@+id/tv_login_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10"
                android:text="Mobile Number"
                android:textColor="#000"
                android:textSize="14sp" />
            <ImageView
                android:id="@+id/iconnemail"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginTop="@dimen/space_10"
                android:src="@drawable/iconn" />

        </LinearLayout>


        <EditText
            android:hint="Enter Mobile Number"
            android:id="@+id/et_login_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_4"
            android:background="@drawable/xml_textbox_bg"
            android:ems="10"
            android:gravity="center_horizontal"
            android:inputType="number"
            android:fontFamily="@font/bold"
            android:maxLength="10"
            android:padding="@dimen/space_10"
            android:textAlignment="center"
            android:textColor="#000"
            android:textColorHint="@color/dark_gray"
            android:textSize="14sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">


        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rel_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <in.binplus.travel.Fonts.LatoBLack
                    android:id="@+id/tv_login_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_10"
                    android:text="@string/tv_login_password"
                    android:textColor="#000"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iconp"
                    android:layout_toRightOf="@id/tv_login_password"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="@dimen/space_10"
                    android:src="@drawable/iconn" />

                <EditText
                    android:hint="Enter Password"
                    android:id="@+id/et_login_pass"
                    android:layout_below="@id/tv_login_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_10"
                    android:layout_marginTop="@dimen/space_4"
                    android:background="@drawable/xml_textbox_bg"
                    android:ems="10"
                    android:fontFamily="@font/bold"
                    android:gravity="center_horizontal"
                    android:inputType="textPassword"
                    android:maxLength="10"
                    android:padding="@dimen/space_10"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textColorHint="@color/dark_gray"
                    android:textSize="14sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_otp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <in.binplus.travel.Fonts.LatoBLack
                    android:id="@+id/tv_login_otp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_10"
                    android:text="OTP"
                    android:textColor="#000"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iconotp"
                    android:layout_toRightOf="@id/tv_login_otp"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="@dimen/space_10"
                    android:src="@drawable/iconn" />

                <EditText
                    android:id="@+id/et_login_otp"
                    android:layout_below="@id/tv_login_otp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_10"
                    android:layout_marginTop="@dimen/space_4"
                    android:background="@drawable/xml_textbox_bg"
                    android:ems="10"
                    android:fontFamily="@font/bold"
                    android:gravity="center_horizontal"
                    android:inputType="number"
                    android:maxLength="6"
                    android:padding="@dimen/space_10"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textColorHint="@color/dark_gray"
                    android:textSize="14sp" />

            </RelativeLayout>


        </RelativeLayout>


        <Button
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="@dimen/space_12"
            android:layout_marginRight="@dimen/space_12"
            android:layout_marginTop="@dimen/space_5"
            android:text="Continue"
            android:textAllCaps="false"
            android:fontFamily="@font/bold"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_rounded_button"
            android:padding="12dp"/>


        <in.binplus.travel.Fonts.LatoBLack
            android:id="@+id/btnForgot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="@dimen/space_15"
            android:gravity="end"
            android:text="@string/forgot"
            android:textColor="@color/color_3"

            android:textSize="13sp"
            />


        <in.binplus.travel.Fonts.LatoBLack
            android:text="-----or-----"

            android:textAlignment="center"
            android:textColor="@color/dark_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button

            android:id="@+id/login_with_otp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:text="Login With OTP"
            android:layout_height="45dp"
            android:layout_margin="12dp"
            android:textColor="@color/white"
            android:fontFamily="@font/bold"
            android:textSize="@dimen/space_10"
            android:background="@drawable/bg_rounded_button"
            />



        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="12dp"
            android:text="Register"
            android:fontFamily="@font/bold"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_rounded_button"
            android:padding="12dp">



        </Button>





    </LinearLayout>



</RelativeLayout>