<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CarBookingActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_keyboard_backspace_black_24dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/back"
                android:id="@+id/title"
                android:text="Book your Car"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/space_5"
                android:textSize="18dp"/>


        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_below="@+id/toolbar"
        android:layout_above="@+id/btnContinue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_5"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/space_5"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/xml_textbox_bg">
            <TextView
                android:id="@+id/txt_vehicle_name"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_5"
                android:textSize="@dimen/space_16"
                android:text="busname"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimary"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt_from"
                    android:layout_width="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/space_5"
                    android:textSize="@dimen/space_16"
                    android:text="to-from"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icons8_right_80px"
                    android:layout_centerHorizontal="true"
                   />
                <TextView
                    android:id="@+id/txt_to"
                    android:layout_width="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/space_5"
                    android:textSize="@dimen/space_16"
                    android:text="to-from"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"/>
            </RelativeLayout>
<!--            <ImageView-->
<!--                android:layout_width="40dp"-->
<!--                android:layout_height="30dp"-->
<!--                android:src="@drawable/icons8_right_80px"-->
<!--                android:layout_gravity="center_horizontal"-->
<!--                android:layout_marginTop="-20dp"/>-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-15dp"
                android:visibility="gone">
                <TextView
                    android:id="@+id/time_from"
                    android:layout_width="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/space_5"
                    android:textSize="@dimen/space_16"
                    android:text="to-from"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"/>
                <TextView
                    android:id="@+id/time_to"
                    android:layout_width="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/space_5"
                    android:textSize="@dimen/space_16"
                    android:text="to-from"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:layout_marginLeft="@dimen/space_5"
                android:layout_marginRight="@dimen/space_5"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recycler_stops"
            android:layout_margin="15dp"/>



    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Enter Name:"
        android:textSize="@dimen/space_13"
        android:padding="@dimen/space_5"
        android:layout_marginTop="@dimen/space_10"
        android:textColor="@color/textcolor"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/et_name"
        android:hint="Enter Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_5"
        android:layout_marginTop="@dimen/space_4"
        android:textSize="14sp"
        android:background="@drawable/xml_textbox_bg"
        android:ems="10"

        android:singleLine="true"/>
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Enter Mobile Number:"
        android:textSize="@dimen/space_13"
        android:padding="@dimen/space_5"
        android:layout_marginTop="@dimen/space_10"
        android:textColor="@color/textcolor"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/et_mobile"
        android:hint="Enter Mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_5"
        android:layout_marginTop="@dimen/space_4"
        android:textSize="14sp"
        android:background="@drawable/xml_textbox_bg"
        android:ems="10"
        android:inputType="number"
        android:maxLength="10"
        android:singleLine="true"
       />
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Enter Address:"
        android:textSize="@dimen/space_13"
        android:padding="@dimen/space_5"
        android:textColor="@color/textcolor"
        android:textStyle="bold"
        android:visibility="gone"/>
    <EditText
        android:id="@+id/et_address"
        android:hint="Enter Address"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="@dimen/space_5"
        android:layout_marginTop="@dimen/space_4"
        android:textSize="14sp"
        android:background="@drawable/xml_textbox_bg"
        android:ems="10"
        android:gravity="top"
        android:inputType="text"
        android:visibility="gone"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Enter Adhar No:"
        android:textSize="@dimen/space_13"
        android:padding="@dimen/space_5"
        android:textColor="@color/textcolor"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/et_adhar_id"
        android:hint="Enter Adhar No"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_5"
        android:layout_marginTop="@dimen/space_4"
        android:textSize="14sp"
        android:background="@drawable/xml_textbox_bg"
        android:ems="10"
        android:inputType="number"
        android:maxLength="12"
        android:singleLine="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Special Requirements(if any):"
            android:textSize="@dimen/space_13"
            android:padding="@dimen/space_5"
            android:textColor="@color/textcolor"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/et_message"
            android:hint="Enter your requirements"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="@dimen/space_5"
            android:layout_marginTop="@dimen/space_4"
            android:textSize="14sp"
            android:gravity="top"
            android:background="@drawable/xml_textbox_bg"
            android:ems="10"
            android:maxLength="12"
            android:singleLine="false"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView

                android:layout_width="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_5"
                android:textSize="@dimen/space_16"
                android:text="Total Amount :"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"/>
            <TextView
                android:id="@+id/txt_tot_price"
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_5"
                android:textSize="@dimen/space_16"
                android:text="to-from"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"/>
        </RelativeLayout>


    </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/btnContinue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/space_10"
        android:text="Confirm"/>
</RelativeLayout>