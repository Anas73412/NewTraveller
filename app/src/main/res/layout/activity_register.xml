<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_5"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:orientation="vertical">

            <ImageView

                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:src="@drawable/logo"
                android:textAlignment="center" />

            <in.binplus.travel.Fonts.LatoBLack
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:shadowColor="#050505"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:textStyle="bold"
                android:text="@string/tv_reg"
                android:textAlignment="center"
                android:textColor="#050505"
                android:textSize="30sp" />
            <RadioGroup
                android:id="@+id/type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <RadioButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Franchise"
                    android:fontFamily="@font/bold"
                    android:id="@+id/franchise"/>
                <RadioButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/bold"
                    android:layout_height="wrap_content"
                    android:text="Restaurant"
                    android:id="@+id/restaurant"/>
            </RadioGroup>
            <RelativeLayout
                android:id="@+id/rel_franchise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/space_10"
                android:layout_height="wrap_content">
                <in.binplus.travel.Fonts.LatoBLack
                    android:id="@+id/tv_reg_name"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agent Name"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iconname"
                    android:src="@drawable/iconn"
                    android:layout_width="10dp"
                    android:layout_height="10dp" />

            </LinearLayout>

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/space_4"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_5"
                android:background="@drawable/xml_textbox_bg"
                android:ems="10"
                android:fontFamily="@font/bold"
                android:singleLine="true"
                android:hint="Enter Name"
                android:inputType="text" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <in.binplus.travel.Fonts.LatoBLack

                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Franchise Name"
                    android:textSize="14sp" />

                <ImageView

                    android:src="@drawable/iconn"
                    android:layout_width="10dp"
                    android:layout_height="10dp" />

            </LinearLayout>

            <EditText
                android:id="@+id/et_company_name"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/space_4"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_5"
                android:background="@drawable/xml_textbox_bg"
                android:ems="10"
                android:fontFamily="@font/bold"
                android:singleLine="true"
                android:hint="Enter Franchise Name"
                android:inputType="text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_height="wrap_content">
                <in.binplus.travel.Fonts.LatoBLack
                    android:id="@+id/tv_reg_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:layout_marginTop="@dimen/space_10"

                    android:text="Email"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iconnemail"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="@dimen/space_10"
                    android:src="@drawable/iconn"
                   />

            </LinearLayout>


            <EditText

                android:id="@+id/et_reg_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_4"
                android:textSize="14sp"
                android:visibility="gone"
                android:layout_marginBottom="5dp"
                android:background="@drawable/xml_textbox_bg"
                android:ems="10"
                android:singleLine="true"
                android:hint="Enter Email"
                android:fontFamily="@font/bold"
                android:inputType="textEmailAddress" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <in.binplus.travel.Fonts.LatoBLack
                    android:textColor="#000"
                    android:id="@+id/tv_reg_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/et_login_phone_hint"
                    android:textSize="14sp"
                   />

                <ImageView
                    android:id="@+id/iconp"
                    android:layout_width="10dp"
                    android:layout_height="10dp"

                    android:src="@drawable/iconn" />

            </LinearLayout>


            <EditText
                android:layout_marginTop="@dimen/space_4"
                android:textSize="14sp"
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_10"
                android:fontFamily="@font/bold"
                android:background="@drawable/xml_textbox_bg"
                android:ems="10"
                android:hint="Enter Mobile Number"
                android:inputType="number"
                android:maxLength="10" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <in.binplus.travel.Fonts.LatoBLack

                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email Id"
                    android:textSize="14sp" />

<!--                <ImageView-->
<!--                  -->
<!--                    android:src="@drawable/iconn"-->
<!--                    android:layout_width="10dp"-->
<!--                    android:layout_height="10dp" />-->

            </LinearLayout>

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/space_4"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_5"
                android:background="@drawable/xml_textbox_bg"
                android:ems="10"
                android:fontFamily="@font/bold"
                android:singleLine="true"
                android:hint="Enter Email"
                android:inputType="text" />

            <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="@string/tv_reg_note"
                android:textSize="14sp" />-->

            <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Society/Flat(Optional)"
                android:textSize="14dp"
                android:id="@+id/textView4" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose Society..."
                android:background="@drawable/xml_textbox_bg"
                android:id="@+id/txtSocity"
                android:layout_marginBottom="5dp"
                android:drawableRight="@mipmap/ic_next"
                android:gravity="left|center_vertical"
                android:padding="10dp"/>-->
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <in.binplus.travel.Fonts.LatoBLack
                    android:textColor="#000"
                    android:id="@+id/tv_reg_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_login_password"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iconpass"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/iconn" />

            </LinearLayout>




            <EditText
                android:textSize="14sp"
                android:layout_marginTop="@dimen/space_4"
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/xml_textbox_bg"
                android:inputType="textPassword"
                android:hint="Enter Password"
                android:fontFamily="@font/bold"
                android:maxLength="10"
                android:ems="10"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <in.binplus.travel.Fonts.LatoBLack
                    android:textColor="#000"
                    android:id="@+id/tv_reg_con_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Confirm Password"
                    android:textSize="14sp" />

                <ImageView

                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/iconn" />

            </LinearLayout>




            <EditText
                android:textSize="14sp"

                android:layout_marginTop="@dimen/space_4"
                android:id="@+id/et_reg__con_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:singleLine="true"
                android:background="@drawable/xml_textbox_bg"
                android:inputType="textPassword"
                android:hint="Enter Confirm Password"
                android:maxLength="10"
                android:fontFamily="@font/bold"
                android:ems="10"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <in.binplus.travel.Fonts.LatoBLack
                    android:textColor="#000"
                    android:id="@+id/tv_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Franchise Address"
                    android:textSize="14sp"/>
                <ImageView

                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/iconn" />

            </LinearLayout>




            <EditText
                android:textSize="14sp"

                android:layout_marginTop="@dimen/space_4"
                android:id="@+id/et_address"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/bold"
                android:gravity="top"
                android:background="@drawable/xml_textbox_bg"
                android:inputType="text"
                android:hint="Enter Your Address"

                android:ems="10"/>
                </LinearLayout>
            </RelativeLayout>



            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="12dp"
                android:text="@string/btn_Register"
                android:fontFamily="@font/bold"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_rounded_button"
                android:padding="12dp"/>


        </LinearLayout>
    </ScrollView>


</RelativeLayout>