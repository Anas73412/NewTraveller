<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".SubmitDocuments"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


    <in.binplus.travel.Fonts.LatoBLack
       android:layout_marginTop="@dimen/space_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_10"
        android:text="Submit Documents"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/space_20"

        android:textAlignment="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_marginRight="@dimen/space_20"
        android:orientation="vertical">


        <in.binplus.travel.Fonts.LatoBLack
            android:id="@+id/adhar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="1. Adhaar Card :"
            android:textSize="@dimen/space_15"
            android:padding="@dimen/space_5"
          android:layout_marginTop="@dimen/space_20"
            android:textColor="@color/textcolor"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/adhar_id"
            android:layout_below="@+id/adhar"
            android:background="@drawable/xml_textbox_bg"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_toLeftOf="@+id/rel_img"
            android:layout_marginRight="@dimen/space_20"
            android:textSize="@dimen/space_15"
            android:padding="@dimen/space_5"
            android:hint=" Enter adhaar no"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/space_10"
            android:inputType="number"
            android:maxLength="12"
            android:fontFamily="@font/bold"
            android:textColor="@color/textcolor"
            android:textStyle="bold"/>


       <LinearLayout
           android:layout_gravity="center_horizontal"
           android:orientation="horizontal"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">


        <LinearLayout
            android:layout_marginTop="@dimen/space_10"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/xml_textbox_bg">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <in.binplus.travel.Fonts.LatoBLack
                    android:text="Adhaar Front"
                    android:textColor="@color/dark_black"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/img_adh_front"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="@dimen/space_1"
                    android:src="@drawable/uploadimage"
                    android:padding="@dimen/space_5"
                    />
            </LinearLayout>


            <Button
                android:id="@+id/btn_adh_front"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="@string/btn_choose"
                android:background="@drawable/bg_rounded_button"
                android:fontFamily="@font/bold"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="@dimen/space_12"
                android:layout_marginTop="@dimen/space_10"
                android:textColor="@android:color/white"

                />
        </LinearLayout>
           <LinearLayout
               android:layout_marginLeft="@dimen/space_10"
            android:layout_marginTop="@dimen/space_10"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/xml_textbox_bg">
               <LinearLayout
                   android:orientation="vertical"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">
                   <in.binplus.travel.Fonts.LatoBLack
                       android:text="Adhaar Back"
                       android:textColor="@color/dark_black"
                       android:textAlignment="center"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"/>
                   <ImageView
                       android:id="@+id/img_adh_back"
                       android:layout_width="100dp"
                       android:layout_height="100dp"
                       android:layout_margin="@dimen/space_1"
                       android:src="@drawable/uploadimage"
                       android:padding="@dimen/space_5"
                       />
               </LinearLayout>


               <Button
                   android:id="@+id/btn_adh_back"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="@string/btn_choose"
                android:background="@drawable/bg_rounded_button"
                android:fontFamily="@font/bold"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="@dimen/space_12"
                android:layout_marginTop="@dimen/space_10"
                android:textColor="@android:color/white"

                />
        </LinearLayout>
       </LinearLayout>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_marginRight="@dimen/space_20"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/two"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/space_15"
            android:text="2."
            android:padding="@dimen/space_5"
            android:textSize="@dimen/space_15"
            android:layout_marginTop="@dimen/space_20"
            android:textColor="@color/textcolor"
            android:textStyle="bold"/>

        <in.binplus.travel.Fonts.LatoBLack
            android:id="@+id/pan"
            android:layout_toRightOf="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text= " Pan Card :"
            android:textSize="@dimen/space_15"
            android:padding="@dimen/space_5"
            android:layout_marginTop="@dimen/space_20"
            android:textColor="@color/textcolor"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/pan_id"
            android:layout_below="@+id/pan"
            android:background="@drawable/xml_textbox_bg"
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:layout_marginRight="@dimen/space_20"
            android:textSize="@dimen/space_15"
            android:padding="@dimen/space_5"
            android:hint=" Enter pan no"
            android:fontFamily="@font/bold"
            android:maxLength="10"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/space_10"
            android:textColor="@color/textcolor"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_below="@id/pan_id"
            android:layout_marginTop="@dimen/space_10"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/xml_textbox_bg">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <in.binplus.travel.Fonts.LatoBLack
                    android:text="PAN Card Front"
                    android:textColor="@color/dark_black"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/img_pan"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="@dimen/space_1"
                    android:src="@drawable/uploadimage"
                    android:padding="@dimen/space_5"
                    />
            </LinearLayout>


            <Button
                android:id="@+id/btn_pan"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="@string/btn_choose"
                android:background="@drawable/bg_rounded_button"
                android:fontFamily="@font/bold"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="@dimen/space_12"
                android:layout_marginTop="@dimen/space_10"
                android:textColor="@android:color/white"

                />
        </LinearLayout>

    </RelativeLayout>

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:background="@color/colorPrimary"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textStyle="bold"
            android:textSize="@dimen/space_15"
            android:layout_marginTop="@dimen/space_20"
            android:fontFamily="@font/bold"
            android:textColor="@android:color/white"

            />
        </LinearLayout>
    </ScrollView>
</LinearLayout>