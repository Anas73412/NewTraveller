<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Fragment.OtpGenerateFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_margin="@dimen/space_15"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <in.binplus.travel.Fonts.LatoBLack
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_10"
            android:text="@string/txt_gen"
            android:textColor="#000"
            android:textSize="16sp" />
        <LinearLayout
            android:layout_marginTop="@dimen/space_10"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <in.binplus.travel.Fonts.LatoBLack
                android:id="@+id/tv_login_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10"
                android:text="Mobile Number"
                android:textColor="#000"
                android:textSize="14sp" />
            <ImageView
                android:id="@+id/iconnemail"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginTop="@dimen/space_10"
                android:src="@drawable/iconn" />

        </LinearLayout>


        <EditText
            android:hint="Enter Mobile Number"
            android:id="@+id/edt_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_4"
            android:background="@drawable/xml_textbox_bg"
            android:ems="10"
            android:gravity="center_horizontal"
            android:inputType="number"
            android:fontFamily="@font/bold"
            android:maxLength="10"
            android:padding="@dimen/space_10"
            android:textAlignment="center"
            android:textColor="#000"
            android:textColorHint="@color/dark_gray"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_send_otp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="@dimen/space_12"
            android:layout_marginRight="@dimen/space_12"
            android:layout_marginTop="@dimen/space_10"
            android:text="@string/btn_send_otp"
            android:textAllCaps="false"
            android:fontFamily="@font/bold"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_rounded_button"
            android:padding="12dp"/>

    </LinearLayout>

</LinearLayout>