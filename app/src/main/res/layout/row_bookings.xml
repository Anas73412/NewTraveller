<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
    android:layout_height="wrap_content"
   android:background="@color/white"
    android:layout_marginTop="@dimen/space_10"
    android:layout_marginLeft="@dimen/space_5"
    android:layout_marginRight="@dimen/space_5"
    android:padding="@dimen/space_5"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/space_20"
    android:background="@drawable/xml_textbox_bg">
    <in.binplus.travel.Fonts.LatoBLack
        android:id="@+id/txt_from_to"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_5"
        android:textSize="@dimen/space_16"
        android:text="to-from"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:textColor="@color/colorPrimary"/>
    <in.binplus.travel.Fonts.LatoBLack
        android:id="@+id/txt_status"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_5"
        android:textSize="@dimen/space_16"
        android:text="Amount"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_alignParentEnd="true"
      />

    <in.binplus.travel.Fonts.LatoBLack
        android:id="@+id/txt_price"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_5"
        android:textSize="@dimen/space_18"
        android:text="Amount"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:textColor="@android:color/holo_red_dark"/>

    <in.binplus.travel.Fonts.LatoBLack
        android:id="@+id/txt_pass_name"
    android:layout_width="wrap_content"
    android:layout_weight="1"
    android:layout_height="wrap_content"
    android:padding="@dimen/space_2"
    android:textSize="@dimen/space_14"
    android:text="name"
        android:layout_below="@+id/txt_from_to"
    android:textAlignment="center"
    android:textColor="@color/textcolor"/>
    <in.binplus.travel.Fonts.LatoBLack
        android:id="@+id/txt_date"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_2"
        android:textSize="@dimen/space_14"
        android:text="date and time"
        android:layout_below="@+id/txt_pass_name"
        android:textAlignment="center"
        />
    <in.binplus.travel.Fonts.LatoBLack
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_2"
        android:textSize="@dimen/space_14"
        android:text="Amount"
        android:layout_below="@+id/txt_date"
        android:textAlignment="center"
        android:visibility="gone"
       />
    <in.binplus.travel.Fonts.LatoBLack
        android:id="@+id/txt_bus"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_2"
        android:textSize="@dimen/space_14"
        android:text="bus name"
        android:layout_below="@+id/txt_time"
        android:textAlignment="center"
     />
    <in.binplus.travel.Fonts.LatoBLack
        android:id="@+id/txt_payment_type"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_2"
        android:textSize="@dimen/space_14"
        android:text="bus name"
        android:layout_below="@+id/txt_time"
        android:textStyle="bold"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        />



</RelativeLayout>
<RelativeLayout
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:padding="@dimen/space_5"
    android:layout_centerHorizontal="true"
    android:background="@drawable/circleshape">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/icons8_traffic_jam_128px"
        android:layout_margin="@dimen/space_5"

        android:layout_centerInParent="true"/></RelativeLayout>

</RelativeLayout>