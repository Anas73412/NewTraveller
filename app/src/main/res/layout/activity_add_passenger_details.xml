<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddPassengerDetails">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_keyboard_backspace_black_24dp"
                    android:layout_centerVertical="true"/>
                <in.binplus.travel.Fonts.LatoBLack
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/back"
                    android:id="@+id/title"
                    android:text=""
                    android:layout_centerVertical="true"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/space_5"
                    android:textSize="18dp"/>


            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appbar"
        android:layout_above="@+id/btnContinue"
        android:layout_marginBottom="@dimen/space_10">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/all">
        <in.binplus.travel.Fonts.LatoBLack
            android:id="@+id/txt_vehicle_name"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_5"
            android:textSize="@dimen/space_16"
            android:text="bus name"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/space_5"
            android:layout_gravity="center"
            android:textColor="@color/textcolor"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/space_5"
        android:layout_marginLeft="@dimen/space_5"
        android:layout_marginRight="@dimen/space_5"
        android:background="@drawable/xml_textbox_bg">
        <in.binplus.travel.Fonts.LatoBLack
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Enter Passenger Details:"
            android:textSize="@dimen/space_16"
            android:padding="@dimen/space_5"

            android:textColor="@color/textcolor"
            android:textStyle="bold|italic"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <in.binplus.travel.Fonts.LatoBLack

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Primary Passenger:"
                android:textSize="@dimen/space_15"
                android:padding="@dimen/space_5"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
             />

        <in.binplus.travel.Fonts.LatoBLack

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seat No:"
            android:textSize="@dimen/space_15"
            android:padding="@dimen/space_5"
            android:layout_gravity="center_horizontal"

            android:textColor="@color/colorAccent"
           android:layout_toLeftOf="@+id/seat_no"/>
        <in.binplus.travel.Fonts.LatoBLack
            android:id="@+id/seat_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="abc"
            android:textSize="@dimen/space_15"
            android:padding="@dimen/space_5"
            android:layout_alignParentEnd="true"

            android:textColor="@color/colorAccent"
            android:textStyle="bold"/></RelativeLayout>
        <EditText
            android:id="@+id/et_name"
            android:hint="Enter Name"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="@dimen/space_5"
            android:layout_marginTop="@dimen/space_4"
            android:textSize="14sp"
            android:background="@drawable/xml_textbox_bg"
            android:ems="10"
            android:fontFamily="@font/bold"
            android:inputType="text"
            android:singleLine="true"/>
        <EditText
            android:id="@+id/et_mobile"
            android:hint="Enter Mobile No."
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="@dimen/space_5"
            android:layout_marginTop="@dimen/space_4"
            android:textSize="14sp"
            android:background="@drawable/xml_textbox_bg"
            android:ems="10"
            android:maxLength="10"
            android:fontFamily="@font/bold"
            android:inputType="number"
            android:singleLine="true"/>
        <EditText
            android:id="@+id/et_adhar_id"
            android:hint="Enter Adhar No"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="@dimen/space_5"
            android:layout_marginTop="@dimen/space_4"
            android:textSize="14sp"
            android:background="@drawable/xml_textbox_bg"
            android:ems="10"
            android:maxLength="12"
            android:fontFamily="@font/bold"
            android:inputType="number"
            android:singleLine="true"/>
        <EditText
            android:id="@+id/et_age"
            android:hint="Enter Age"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="@dimen/space_5"
            android:layout_marginTop="@dimen/space_4"
            android:textSize="14sp"
            android:background="@drawable/xml_textbox_bg"
            android:ems="10"
            android:maxLength="2"
            android:fontFamily="@font/bold"
            android:inputType="number"
            android:singleLine="true"/>
        <EditText
            android:id="@+id/et_nationality"
            android:hint="Enter nationality"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="@dimen/space_5"
            android:layout_marginTop="@dimen/space_4"
            android:textSize="14sp"
            android:fontFamily="@font/bold"
            android:background="@drawable/xml_textbox_bg"
            android:ems="10"
            android:inputType="text"
            android:singleLine="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
         >
        <in.binplus.travel.Fonts.LatoBLack
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender:"
            android:textSize="16dp"
            android:padding="@dimen/space_8"
            android:layout_gravity="center_vertical"
            android:textColor="@color/textcolor"
            android:textStyle="bold"/>

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="@dimen/space_5"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/male"
                android:tag="male"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Male"
                android:fontFamily="@font/bold"
                />
            <RadioButton
                android:id="@+id/female"
                android:tag="female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Female"
                android:fontFamily="@font/bold"
                />
        </RadioGroup>
        </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/space_5"
            android:background="@drawable/xml_textbox_bg">
            <in.binplus.travel.Fonts.LatoBLack

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other Passengers:"
                android:textSize="@dimen/space_15"
                android:padding="@dimen/space_5"

                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/all"
                android:layout_marginTop="@dimen/space_2"
                android:id="@+id/recycler_add_passenger"/>
        </LinearLayout>

    </LinearLayout>


    </RelativeLayout>
    </ScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnContinue"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:text="Continue"
        android:layout_gravity="bottom"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>