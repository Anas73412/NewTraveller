<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/space_5"
    app:cardElevation="@dimen/space_5"
    android:background="@drawable/xml_textbox_bg"
    android:layout_margin="@dimen/space_5">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:id="@+id/linear_passenger"
       >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <in.binplus.travel.Fonts.LatoBLack
                android:id="@+id/txt_seat"
                android:layout_toLeftOf="@id/seat_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seat No:"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/space_15"
                android:padding="@dimen/space_5"
                android:textColor="@color/colorAccent"
              />
            <in.binplus.travel.Fonts.LatoBLack
                android:id="@+id/seat_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" abc"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/space_15"
                android:padding="@dimen/space_5"
                android:layout_alignParentEnd="true"

                android:textColor="@color/colorAccent"
                android:textStyle="bold"/>
        </RelativeLayout>

        <EditText
            android:id="@+id/et_name"
            android:hint="Enter Name"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="@dimen/space_5"
            android:layout_marginTop="@dimen/space_4"
            android:textSize="14sp"
            android:background="@drawable/xml_textbox_bg"
            android:ems="10"
            android:fontFamily="@font/bold"
            android:inputType="text"
            android:singleLine="true"/>
        <EditText
            android:id="@+id/et_mobile"
            android:hint="Enter mobile  number"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="@dimen/space_5"
            android:layout_marginTop="@dimen/space_4"
            android:textSize="14sp"
            android:background="@drawable/xml_textbox_bg"
            android:ems="10"
            android:maxLength="10"
            android:fontFamily="@font/bold"
            android:inputType="number"
            android:singleLine="true"/>
        <EditText
            android:id="@+id/et_age"
            android:hint="Enter Age"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="@dimen/space_5"
            android:layout_marginTop="@dimen/space_4"
            android:textSize="14sp"
            android:background="@drawable/xml_textbox_bg"
            android:ems="10"
            android:maxLength="2"
            android:fontFamily="@font/bold"
            android:inputType="number"
            android:singleLine="true"/>
        <EditText
            android:id="@+id/et_nationality"
            android:hint="Enter nationality"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="@dimen/space_5"
            android:layout_marginTop="@dimen/space_4"
            android:textSize="14sp"
            android:fontFamily="@font/bold"
            android:background="@drawable/xml_textbox_bg"
            android:ems="10"
            android:inputType="text"
            android:singleLine="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <in.binplus.travel.Fonts.LatoBLack
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender:"
                android:textSize="16dp"
                android:padding="@dimen/space_8"
                android:layout_gravity="center_vertical"
                android:textColor="@color/textcolor"
                android:textStyle="bold"/>

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginTop="@dimen/space_5"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/male"
                    android:tag="male"
                    android:checked="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Male"
                    android:fontFamily="@font/bold"
                    />
                <RadioButton
                    android:id="@+id/female"
                    android:tag="female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Female"
                    android:fontFamily="@font/bold"
                    />
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>