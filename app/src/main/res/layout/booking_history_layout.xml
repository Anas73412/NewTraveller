<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >

    <androidx.cardview.widget.CardView
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="15dp">
    <RelativeLayout
        android:layout_marginTop="@dimen/space_10"
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/txtCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booking Id :"
            android:padding="2dp"
            android:textColor="@android:color/black"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/txt_booking_id"
            android:layout_toRightOf="@id/txtCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"

            android:text="Id"

            android:textSize="12dp"/>

        <RelativeLayout
            android:id="@+id/relAmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">
            <TextView
                android:id="@+id/txtId"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="@android:color/black"
                android:text="Date :"
                android:padding="2dp"
                android:textSize="12dp"/>
            <TextView
                android:id="@+id/txt_date"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txtId"

                android:text="amount"
                android:padding="2dp"
                android:textSize="12dp"/>

        </RelativeLayout>

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/txtCode"
            android:background="@android:color/darker_gray"/>


        <TextView
            android:id="@+id/txtPassengerName"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line1"

            android:text="Name :"
            android:padding="2dp"
            android:textSize="12dp"/>
        <TextView
            android:id="@+id/txtPassengerEmail"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtPassengerName"

            android:text="Contact No :"
            android:padding="2dp"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/txt_mobile"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_pass_name"
            android:textColor="@android:color/black"
            android:layout_alignParentRight="true"
            android:text="Time"
            android:padding="2dp"
            android:textSize="12dp"/>
        <TextView
            android:id="@+id/txt_pass_name"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line1"
            android:layout_alignParentRight="true"
            android:textColor="@android:color/black"
            android:text="Time"
            android:padding="2dp"
            android:textSize="12dp"/>
        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/txtPassengerEmail"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/txt_from"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line2"
            android:layout_marginTop="5dp"
            android:text="Kanpur"
            android:paddingTop="2dp"
            android:paddingRight="10dp"
            android:textColor="@android:color/black"
            android:paddingLeft="2dp"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/txt_too"

            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_below="@id/line2"
            android:rotation="180"
            android:layout_marginTop="5dp"
            android:background="@drawable/ic_keyboard_backspace_black_24dp"
            android:backgroundTint="@color/colorPrimary"

            android:paddingRight="10dp"
            android:layout_toRightOf="@id/txt_from"
            android:layout_marginLeft="40dp"
            android:textSize="10dp"/>


        <TextView
            android:id="@+id/txt_to"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line2"
            android:layout_toRightOf="@id/txt_too"
            android:layout_marginTop="5dp"
            android:text="Kanpur"
            android:textColor="@android:color/black"
            android:layout_marginLeft="30dp"
            android:paddingTop="2dp"
            android:paddingRight="10dp"
            android:paddingLeft="2dp"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/txt_status1"
     android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line2"
            android:textColor="@android:color/black"
            android:layout_alignParentRight="true"
            android:text="Time"
            android:padding="2dp"
            android:layout_marginTop="5dp"

            android:textSize="12dp"/>
        <View
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="5dp"
            android:layout_below="@id/txt_from"
            android:background="@android:color/darker_gray"/>

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_below="@id/line3"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:padding="5dp"
            >

            <TextView
                android:layout_marginTop="@dimen/space_5"
                android:id="@+id/txtTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="TOTAL :"/>

            <TextView
                android:id="@+id/txt_price"
                android:layout_marginTop="@dimen/space_5"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@id/txtTotal"
                android:layout_marginLeft="@dimen/space_5"
                android:textColor="#f4b362"
                android:layout_height="wrap_content"
                android:text="TOTAL :"
                />


            <RelativeLayout
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/space_5"
                android:layout_marginRight="@dimen/space_10"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtst"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:text="Status :"/>

                <TextView
                    android:id="@+id/txt_status"

                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@id/txtst"
                    android:textColor="#f4b362"
                    android:layout_marginLeft="@dimen/space_5"
                    android:layout_height="wrap_content"
                    android:text="TOTAL :"
                    />


            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>