<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
 android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/xml_textbox_bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_5"
        android:layout_marginRight="@dimen/space_5"
        android:layout_marginTop="40dp"
        android:orientation="vertical">
        <EditText
            android:id="@+id/et_name"
            android:hint="Enter Name"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="@dimen/space_5"
            android:layout_marginTop="@dimen/space_4"
            android:textSize="14sp"
            android:background="@drawable/xml_textbox_bg"
            android:ems="10"
            android:fontFamily="@font/bold"
            android:inputType="text"
            android:singleLine="true"/>
        <EditText
            android:id="@+id/et_age"
            android:hint="Enter Age"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="@dimen/space_5"
            android:layout_marginTop="@dimen/space_4"
            android:textSize="14sp"
            android:background="@drawable/xml_textbox_bg"
            android:ems="10"
            android:maxLength="2"
            android:fontFamily="@font/bold"
            android:inputType="number"
            android:singleLine="true"/>
        <EditText
            android:id="@+id/et_nationality"
            android:hint="Enter nationality"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="@dimen/space_5"
            android:layout_marginTop="@dimen/space_4"
            android:textSize="14sp"
            android:fontFamily="@font/bold"
            android:background="@drawable/xml_textbox_bg"
            android:ems="10"
            android:inputType="text"
            android:singleLine="true"/>
     <RadioGroup
         android:id="@+id/radio_group"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:weightSum="2"
         android:layout_marginTop="@dimen/space_5"
         android:orientation="horizontal">
         <RadioButton
             android:id="@+id/male"
             android:tag="male"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:text="Male"
             android:fontFamily="@font/bold"
             />
         <RadioButton
             android:id="@+id/female"
             android:tag="female"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:text="Female"
             android:fontFamily="@font/bold"
             />
     </RadioGroup>

        <in.binplus.travel.Fonts.LatoBLack
            android:id="@+id/submitDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Passenger"
            android:background="@drawable/xml_textbox_blue_bg"
            android:textColor="@color/white"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="@dimen/space_5"
            android:paddingBottom="@dimen/space_5"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/space_10"/>

    </LinearLayout>
    <ImageView
        android:id="@+id/close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/icons8_cancel_96px"
        android:layout_alignParentEnd="true"

        />

</RelativeLayout>