<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/xml_textbox_bg"
    android:layout_margin="@dimen/space_5">

    <ImageView
        android:id="@+id/img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/icons8_male_user_96px"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:layout_toRightOf="@+id/img"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <in.binplus.travel.Fonts.LatoBLack
            android:id="@+id/passenger_name"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_2"
            android:textSize="@dimen/space_15"
            android:text="Name"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/space_20"
            android:textColor="@color/colorPrimary"/>

        <in.binplus.travel.Fonts.LatoBLack
            android:id="@+id/passenger_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_2"
            android:textSize="@dimen/space_13"
            android:text="1"
            android:textColor="@color/textcolor"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <in.binplus.travel.Fonts.LatoBLack
                android:id="@+id/passenger_seat"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_2"
                android:textSize="@dimen/space_15"
                android:text="Name"
                android:textStyle="bold"
                android:layout_marginRight="@dimen/space_20"
                android:textColor="@color/textcolor"/>

            <in.binplus.travel.Fonts.LatoBLack
                android:id="@+id/p_seat_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_2"
                android:textSize="@dimen/space_13"
                android:text="1"
                android:textColor="@color/textcolor"/>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>