<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HireDetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <in.binplus.travel.Fonts.LatoBLack
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lets find a suitable vehicle for you and make your journey awesome"
                android:textSize="@dimen/space_14"
                android:textColor="@color/textcolor"
                android:padding="@dimen/space_5"/>
            <in.binplus.travel.Fonts.LatoBLack
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Dates "
                android:textSize="@dimen/space_16"
                android:textColor="@color/textcolor"
                android:paddingLeft="@dimen/space_5"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/linear_date"
                android:layout_margin="@dimen/space_5"
                android:layout_gravity="center_vertical"
                android:weightSum="2">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/txt_date_from"
                        android:layout_width="match_parent"
                        android:fontFamily="@font/bold"
                        android:layout_height="wrap_content"
                        android:hint="date from"
                        android:textStyle="bold"
                        android:textAlignment="gravity"
                        android:textSize="@dimen/space_18"
                        android:background="@color/white"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/space_5"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_1"
                        android:background="@color/dark_gray"
                        android:layout_margin="@dimen/space_5"/>
                    <EditText
                        android:id="@+id/txt_time_from"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="time from"
                        android:textStyle="bold"
                        android:textAlignment="gravity"
                        android:textSize="@dimen/space_18"
                        android:background="@color/white"
                        android:fontFamily="@font/bold"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/space_5"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_1"
                        android:background="@color/dark_gray"
                        android:layout_margin="@dimen/space_5"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/txt_date_to"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:hint="date to"
                        android:textStyle="bold"
                        android:textAlignment="gravity"
                        android:textSize="@dimen/space_18"
                        android:fontFamily="@font/bold"
                        android:background="@color/white"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/space_5"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_1"
                        android:background="@color/dark_gray"
                        android:layout_margin="@dimen/space_5"/>
                    <EditText
                        android:id="@+id/txt_time_to"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="time to"
                        android:textStyle="bold"
                        android:textAlignment="gravity"
                        android:textSize="@dimen/space_18"
                        android:fontFamily="@font/bold"
                        android:background="@color/white"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/space_5"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_1"
                        android:background="@color/dark_gray"
                        android:layout_margin="@dimen/space_5"/>
                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">
                <EditText

                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="ex. 4"
                    android:textStyle="bold"
                    android:textAlignment="gravity"
                    android:text="No. of Passengers"
                    android:textSize="@dimen/space_18"
                    android:fontFamily="@font/bold"
                    android:background="@color/white"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/space_5"
                    />
                <EditText
                    android:id="@+id/txt_tot_member"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="ex. 4"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/space_1"
                    android:textAlignment="gravity"
                    android:textSize="@dimen/space_18"
                    android:background="@color/white"
                    android:fontFamily="@font/bold"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/space_5"/>
            </LinearLayout>
            <in.binplus.travel.Fonts.LatoBLack
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Type of Journey :"
                android:textSize="@dimen/space_16"
                android:textColor="@color/textcolor"
                android:paddingLeft="@dimen/space_5"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_margin="@dimen/space_5"
                >
            <RelativeLayout
                android:id="@+id/rel_local"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/xml_textbox_bg">
                <ImageView
                    android:id="@+id/img_select_local"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/icons8_approval_24px"

                    />
                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/road"
                    android:tint="@color/colorPrimary"
                   android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_below="@+id/img1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Local \n ( within city)"
                    android:textStyle="bold"
                    android:textSize="@dimen/space_16"
                    android:textAlignment="center"
                    android:padding="@dimen/space_5"/>
            </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rel_outstation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/xml_textbox_bg">
                    <ImageView
                        android:id="@+id/img_select_outstation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/icons8_approval_24px"

                        />
                    <ImageView
                        android:id="@+id/img2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/mountain"
                        android:tint="@color/colorPrimary"
                        android:layout_centerHorizontal="true"/>
                    <in.binplus.travel.Fonts.LatoBLack
                        android:layout_below="@+id/img2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Out Station \n ( outside city)"
                        android:textStyle="bold"
                        android:textSize="@dimen/space_16"
                        android:textAlignment="center"
                        android:padding="@dimen/space_5"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_margin="@dimen/space_5"
                >
                <RelativeLayout
                    android:id="@+id/rel_round"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/xml_textbox_bg">
<!--                    <ImageView-->
<!--                        android:id="@+id/img_select_two"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_alignParentEnd="true"-->
<!--                        android:layout_alignParentTop="true"-->
<!--                        android:src="@drawable/icons8_approval_24px"-->

<!--                        />-->

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Round Trip"
                        android:textStyle="bold"
                        android:textSize="@dimen/space_16"
                        android:textAlignment="center"
                        android:padding="@dimen/space_5"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rel_oneway"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/xml_textbox_bg">
<!--                    <ImageView-->
<!--                        android:id="@+id/img_select_outstation"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_alignParentEnd="true"-->
<!--                        android:layout_alignParentTop="true"-->
<!--                        android:src="@drawable/icons8_approval_24px"-->

<!--                        />-->

                    <in.binplus.travel.Fonts.LatoBLack

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="One Side Trip"
                        android:textStyle="bold"
                        android:textSize="@dimen/space_16"
                        android:textAlignment="center"
                        android:padding="@dimen/space_5"/>
                </RelativeLayout>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_city_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/space_5"
                android:layout_margin="@dimen/space_10"

                >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/linear_from"
                    android:layout_gravity="center_vertical">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/icons8_city_50px"
                        android:tint="@color/colorPrimary"
                        android:layout_margin="@dimen/space_10"
                        />
                    <EditText
                        android:id="@+id/txt_from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="City"
                        android:fontFamily="@font/bold"
                        android:textStyle="bold"
                        android:textAlignment="gravity"
                        android:textSize="@dimen/space_18"
                        android:background="@color/white"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/space_5"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_1"
                    android:background="@color/dark_gray"
                    android:layout_margin="@dimen/space_5"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/linear_to"
                    android:layout_gravity="center_vertical">
<!--                    <ImageView-->
<!--                        android:layout_width="30dp"-->
<!--                        android:layout_height="30dp"-->
<!--                        android:src="@drawable/icons8_bus_64px"-->
<!--                        android:layout_margin="@dimen/space_10"-->
<!--                        />-->
                    <EditText
                        android:id="@+id/txt_to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Starting Location"
                        android:fontFamily="@font/bold"
                        android:textStyle="bold"
                        android:textAlignment="gravity"
                        android:textSize="@dimen/space_18"
                        android:background="@color/white"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/space_5"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_1"
                    android:background="@color/dark_gray"
                    android:layout_margin="@dimen/space_5"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/linear_destination"
                    android:layout_gravity="center_vertical">
<!--                    <ImageView-->
<!--                        android:layout_width="30dp"-->
<!--                        android:layout_height="30dp"-->
<!--                        android:src="@drawable/icons8_schedule_64px"-->
<!--                        android:layout_margin="@dimen/space_10"-->
<!--                        />-->
                    <EditText
                        android:id="@+id/txt_destination"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint=" Destination"
                        android:textStyle="bold"
                        android:textAlignment="gravity"
                        android:textSize="@dimen/space_18"
                        android:fontFamily="@font/bold"
                        android:background="@color/white"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/space_5"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_1"
                    android:background="@color/dark_gray"
                    android:layout_margin="@dimen/space_5"/>

                <Button
                    android:id="@+id/btnSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/space_15"
                    android:layout_marginLeft="@dimen/space_15"
                    android:layout_marginTop="@dimen/space_5"
                    android:text="Submit"
                    android:fontFamily="@font/bold"
                    android:background="@drawable/xml_textbox_blue_bg"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="@dimen/space_10"/>
            </LinearLayout>
            </RelativeLayout>
            </androidx.cardview.widget.CardView>



        </LinearLayout>

    </ScrollView>



</RelativeLayout>