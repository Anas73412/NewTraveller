<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectSeatActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_keyboard_backspace_black_24dp"
                android:layout_centerVertical="true"/>
            <in.binplus.travel.Fonts.LatoBLack
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/back"
                android:id="@+id/title"
                android:text="aaa"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/space_5"
                android:textSize="18dp"/>


        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <in.binplus.travel.Fonts.LatoBLack
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/space_5"
                    android:id="@+id/bus_detail"
                    android:text="bus details"
                    android:textSize="@dimen/space_16"
                    android:textAlignment="center"
                    android:textColor="@color/textcolor"
                    android:layout_centerInParent="true"/>

                <RelativeLayout
                    android:id="@+id/rel_birth"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/space_20"
                    android:layout_marginRight="@dimen/space_20"
                    android:layout_marginTop="@dimen/space_20"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <Button
                            android:id="@+id/btn_lower"
                            android:textAllCaps="false"
                            android:text="Lower"
                            android:background="@color/gray"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"/>
                        <Button
                            android:id="@+id/btn_upper"
                            android:textAllCaps="false"
                            android:text="Upper"
                            android:background="@color/gray"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"/>
                    </LinearLayout>
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:visibility="visible"
                        android:id="@+id/rel_lower_seats"
                        android:layout_margin="30dp"

                        android:background="@drawable/bus_border_layout"
                        android:layout_width="wrap_content"
                        android:padding="@dimen/space_10"
                        android:layout_height="wrap_content">

                        <LinearLayout

                            android:id="@+id/liner_stearing"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_gravity="end"
                                android:src="@drawable/stearing"
                                android:layout_width="30dp"
                                android:layout_height="30dp"/>
                            <View
                                android:background="@color/dark_gray"
                                android:paddingLeft="@dimen/space_10"
                                android:layout_marginTop="@dimen/space_5"
                                android:layout_marginBottom="@dimen/space_5"
                                android:paddingEnd="@dimen/space_10"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/space_1"/>

                        </LinearLayout>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rec_lower_seats"
                            android:layout_below="@id/liner_stearing"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </RelativeLayout>
                    <RelativeLayout
                        android:visibility="gone"
                        android:id="@+id/rel_upper_sheats"
                        android:layout_margin="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rec_upper_seats"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </RelativeLayout>

                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp">


        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_weight="8"

                android:layout_width="0dp"
                android:layout_height="match_parent">
                <in.binplus.travel.Fonts.LatoBLack
                    android:id="@+id/tv_seats"
                    android:layout_marginTop="@dimen/space_5"
                    android:text=""
                    android:paddingLeft="@dimen/space_10"
                    android:paddingRight="@dimen/space_5"
                    android:visibility="gone"
                    android:textColor="@color/dark_black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:weightSum="10"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <in.binplus.travel.Fonts.LatoBLack
                        android:id="@+id/tv_upr_seats"
                        android:text=""
                        android:visibility="gone"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="@dimen/space_10"
                        android:paddingRight="@dimen/space_5"
                        android:textColor="@color/dark_black"
                        android:layout_width="0dp"
                        android:layout_weight="10"
                        android:layout_height="wrap_content"/>

                            </LinearLayout>
            </LinearLayout>
            <Button
                android:textColor="@color/white"
                android:background="@color/colorAccent"
                android:text="Tickets"
                android:layout_gravity="end"
                android:layout_weight="2"
                android:id="@+id/btn_ok"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>