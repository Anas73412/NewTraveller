<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_15"

        app:cardCornerRadius="@dimen/space_5"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_15"
            android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_img"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/logo"
                android:layout_margin="@dimen/space_20"
                android:layout_centerInParent="true" />
        </RelativeLayout>
            <in.binplus.travel.Fonts.LatoBLack
                android:id="@+id/user_name"
                android:layout_below="@+id/img2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:text="NAme"
                android:textStyle="bold"
                android:padding="@dimen/space_5"
                android:textColor="@color/textcolor"
                android:textSize="16dp"/>
            <in.binplus.travel.Fonts.LatoBLack
                android:id="@+id/user_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:text="00000000"
                android:textStyle="bold"
                android:padding="@dimen/space_2"
                android:textColor="@color/textcolor"
                android:textSize="16dp"/>
            <in.binplus.travel.Fonts.LatoBLack
                android:id="@+id/user_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:text="00000000"
                android:textStyle="bold"
                android:padding="@dimen/space_2"
                android:textColor="@color/textcolor"
                android:textSize="16dp"/>
            <in.binplus.travel.Fonts.LatoBLack
                android:id="@+id/user_franchise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:text="00000000"
                android:textStyle="bold"
                android:padding="@dimen/space_2"
                android:textColor="@color/textcolor"
                android:textSize="16dp"/>
            <in.binplus.travel.Fonts.LatoBLack
                android:id="@+id/user_add"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:text="00000000"
                android:textStyle="bold"
                android:padding="@dimen/space_2"
                android:textColor="@color/textcolor"
                android:textSize="16dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_15"
                android:layout_marginRight="@dimen/space_15"
                app:cardCornerRadius="@dimen/space_6"
                app:cardElevation="@dimen/space_5"
                >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_5"
        android:layout_gravity="center_vertical">
        <in.binplus.travel.Fonts.LatoBLack
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Availability :"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/space_15"
            android:layout_marginLeft="@dimen/space_10"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:textStyle="bold|italic"
            android:padding="@dimen/space_5"/>

        <Switch
            android:id="@+id/available_status"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginEnd="@dimen/space_20"

            android:thumb="@drawable/round_thumb"
            android:track="@drawable/round_track"
            android:layout_alignParentEnd="true"
            />
        <in.binplus.travel.Fonts.LatoBLack
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/space_10"
            android:layout_below="@id/available_status"
            android:text="Availability"
            android:padding="@dimen/space_2"
            android:textStyle="italic"
            android:visibility="gone"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/space_15"/>



    </RelativeLayout>
            </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/space_5"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="@dimen/space_15"
        android:layout_marginRight="@dimen/space_15">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="@dimen/space_15"
    android:padding="@dimen/space_15"
    android:weightSum="3">

  <RelativeLayout
      android:id="@+id/edit_profile"
      android:layout_width="0dp"
      android:layout_height="120dp"
      android:layout_margin="@dimen/space_10"
      android:layout_weight="1"
      >
      <de.hdodenhof.circleimageview.CircleImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:src="@drawable/icons8_profile_64px"
          android:padding="@dimen/space_20"
          />
      <in.binplus.travel.Fonts.LatoBLack
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Edit \n Profile"
          android:layout_alignParentBottom="true"
          android:textColor="@color/colorPrimary"
          android:textAlignment="center"/>
  </RelativeLayout>
    <RelativeLayout
        android:id="@+id/update_pass"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_weight="1"
        android:layout_margin="@dimen/space_10"
      >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/icons8_password_64px"
            android:padding="@dimen/space_20"
            android:layout_alignParentTop="true"
            />
        <in.binplus.travel.Fonts.LatoBLack
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:textColor="@color/colorPrimary"
            android:layout_alignParentBottom="true"
            android:textAlignment="center"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/my_doc"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_weight="1"
        android:layout_margin="@dimen/space_10"
    >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/icons8_document_64px"
            android:layout_alignParentTop="true"
            android:padding="@dimen/space_20"
            />
        <in.binplus.travel.Fonts.LatoBLack
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My \n Documents"
            android:textColor="@color/colorPrimary"
            android:layout_alignParentBottom="true"
            android:textAlignment="center"/>

    </RelativeLayout>
</LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>