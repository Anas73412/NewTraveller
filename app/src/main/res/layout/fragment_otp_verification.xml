<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Fragment.OtpVerificationFragment">

    <LinearLayout
        android:layout_margin="@dimen/space_15"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <in.binplus.travel.Fonts.LatoBLack
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_10"
            android:text="@string/txt_verf"
            android:textColor="#000"
            android:textSize="16sp" />
    <LinearLayout
        android:layout_marginTop="@dimen/space_10"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <in.binplus.travel.Fonts.LatoBLack
            android:id="@+id/tv_login_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_10"
            android:text="One Time Password (OTP)"
            android:textColor="#000"
            android:textSize="14sp" />
        <ImageView
            android:id="@+id/iconnemail"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginTop="@dimen/space_10"
            android:src="@drawable/iconn" />

    </LinearLayout>


    <EditText
        android:hint="Enter OTP (One Time Password)"
        android:id="@+id/edt_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_4"
        android:background="@drawable/xml_textbox_bg"
        android:ems="10"
        android:gravity="center_horizontal"
        android:inputType="number"
        android:fontFamily="@font/bold"
        android:maxLength="6"
        android:padding="@dimen/space_10"
        android:textAlignment="center"
        android:textColor="#000"
        android:textColorHint="@color/dark_gray"
        android:textSize="14sp" />
        <RelativeLayout
            android:id="@+id/re"
            android:layout_marginTop="@dimen/space_10"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            >


            <in.binplus.travel.Fonts.LatoBLack
                android:id="@+id/txtleft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_5"
                android:layout_centerHorizontal="true"
                android:text="Time left :"/>
            <in.binplus.travel.Fonts.LatoBLack
                android:id="@+id/tv_countdown"
                android:text="0"
                android:layout_toRightOf="@id/txtleft"
                android:padding="@dimen/space_5"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />



        </RelativeLayout>
        <in.binplus.travel.Fonts.LatoBLack
            android:id="@+id/tv_resend"
            android:text="Resend OTP"
            android:visibility="gone"
            android:textAlignment="textEnd"
            android:padding="@dimen/space_5"
            android:layout_marginRight="@dimen/space_20"
            android:layout_alignParentRight="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <Button
            android:id="@+id/btn_verify_otp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="@dimen/space_12"
            android:layout_marginRight="@dimen/space_12"
            android:layout_marginTop="@dimen/space_10"
            android:text="@string/btn_verify_otp"
            android:textAllCaps="false"
            android:fontFamily="@font/bold"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_rounded_button"
            android:padding="12dp"/>

    </LinearLayout>

</LinearLayout>